record(mbbi, "$(LOCA):$(DEV):$(SUBDEV):$(PVNAME)")
{
	field(DTYP, "$(DATATYPE)")
	field(INP, "@asyn($(PORT),$(ADDR),$(TIMEOUT))$(PARAM)")
	field(SCAN, "$(SCAN)")
	field(ZRVL, "1")
	field(ONVL, "2")
	field(TWVL, "3")
	field(THVL, "4")
	field(FRVL, "5")
	field(FVVL, "6")
	field(SXVL, "7")
	field(SVVL, "8")
	field(EIVL, "9")
	field(NIVL, "10")
	field(TEVL, "11")
	field(ELVL, "12")
	field(TVVL, "13")
	field(TTVL, "14")
	field(FTVL, "15")

	field(ZRST, "$(ZRST)")
	field(ONST, "$(ONST)")
	field(TWST, "$(TWST)")
	field(THST, "$(THST)")
	field(FRST, "$(FRST)")
	field(FVST, "$(FVST)")
	field(SXST, "$(SXST)")
	info(autosaveFields, "ZRSV ONSV TWSV THSV FRSV FVSV SXSV SVSV EISV NISV TESV ELSV TVSV TTSV FTSV FFSV")
}
